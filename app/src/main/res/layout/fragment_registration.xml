<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primary_background"
    tools:context=".registration.RegistrationFragment">

    <TextView
        android:id="@+id/registration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="@string/registration"
        android:textColor="?attr/primary_text"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/navigate_authorization"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="@dimen/primary_top_margin"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        tools:text="Уже есть учетная запись? Войти"
        android:textColor="?attr/secondary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registration" />

    <EditText
        android:id="@+id/edit_name_registration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginBottom="@dimen/primary_bottom_margin"
        android:background="@drawable/style_edit_text"
        android:hint="@string/edit_name"
        android:padding="3dp"
        android:textColor="?attr/primary_text"
        android:textColorHint="?attr/secondary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintBottom_toTopOf="@+id/edit_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginBottom="@dimen/accent_bottom_margin"
        android:background="@drawable/style_edit_text"
        android:hint="@string/edit_password"
        android:padding="3dp"
        android:textColor="?attr/primary_text"
        android:textColorHint="?attr/secondary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_create_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="@dimen/secondary_top_margin"
        android:layout_marginBottom="200dp"
        android:backgroundTint="?attr/primary"
        android:text="@string/done"
        android:textColor="?attr/accent_text"
        android:textSize="@dimen/primary_size"
        app:cornerRadius="@dimen/primary_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>