<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.FeaturesScreenFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/container_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/primary_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:src="@drawable/menu"
        app:layout_constraintBottom_toBottomOf="@+id/container_info"
        app:layout_constraintStart_toStartOf="@+id/container_info"
        app:layout_constraintTop_toTopOf="@+id/container_info"
        app:tint="?attr/image" />

    <TextView
        android:id="@+id/name_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/name"
        android:textColor="?attr/primary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="@+id/container_info"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/back" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/line"
        app:layout_constraintBottom_toBottomOf="@id/container_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_features"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_info" />

</androidx.constraintlayout.widget.ConstraintLayout>