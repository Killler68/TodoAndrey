<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background_item_weather_week"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/primary_top_margin">

    <androidx.cardview.widget.CardView
        android:id="@+id/container_weather_week"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:backgroundTint="?attr/accent_background"
        app:cardCornerRadius="@dimen/primary_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="@dimen/primary_top_margin"
        android:text="20 марта. пн"
        android:textColor="?attr/primary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintStart_toStartOf="@+id/container_weather_week"
        app:layout_constraintTop_toTopOf="@id/container_weather_week" />

    <ImageView
        android:id="@+id/weather_week"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:scaleType="fitCenter"
        android:src="@drawable/sun"
        app:layout_constraintBottom_toBottomOf="@+id/date_week"
        app:layout_constraintEnd_toEndOf="@id/container_weather_week"
        app:layout_constraintTop_toTopOf="@+id/date_week" />

    <TextView
        android:id="@+id/temperature_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:text="10°"
        android:textColor="?attr/secondary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintBottom_toBottomOf="@+id/weather_week"
        app:layout_constraintEnd_toStartOf="@+id/weather_week"
        app:layout_constraintTop_toTopOf="@+id/weather_week" />

    <TextView
        android:id="@+id/temperature_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:text="10°"
        android:textColor="?attr/secondary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintBottom_toBottomOf="@+id/weather_week"
        app:layout_constraintEnd_toStartOf="@+id/temperature_max"
        app:layout_constraintTop_toTopOf="@+id/weather_week" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="@dimen/primary_top_margin"
        android:background="?attr/line"
        app:layout_constraintEnd_toEndOf="@+id/container_weather_week"
        app:layout_constraintStart_toStartOf="@id/container_weather_week"
        app:layout_constraintTop_toBottomOf="@+id/date_week" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_weather_hourly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/accent_horizontal_margin"
        android:layout_marginTop="@dimen/accent_top_margin"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="@+id/container_weather_week"
        app:layout_constraintStart_toStartOf="@id/container_weather_week"
        app:layout_constraintTop_toBottomOf="@+id/line"
        tools:listitem="@layout/recycler_item_weather_hourly" />

</androidx.constraintlayout.widget.ConstraintLayout>