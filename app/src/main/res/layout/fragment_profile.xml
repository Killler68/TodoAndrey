<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primary_background"
    tools:context=".profile.ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/container_info"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="?attr/primary_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:layout_marginTop="@dimen/primary_top_margin"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="@+id/container_info"
        app:layout_constraintTop_toTopOf="@+id/container_info"
        app:tint="?attr/image" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:src="@drawable/options"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="@+id/container_info"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:tint="?attr/image" />

    <androidx.cardview.widget.CardView
        android:id="@+id/container_image_profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/secondary_horizontal_margin"
        android:layout_marginTop="@dimen/accent_top_margin"
        android:layout_marginBottom="@dimen/primary_bottom_margin"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/container_info"
        app:layout_constraintStart_toStartOf="@+id/container_info"
        app:layout_constraintTop_toBottomOf="@+id/back">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile"
            app:tint="?attr/image" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:text="nickname"
        android:textColor="?attr/primary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintBottom_toBottomOf="@+id/container_image_profile"
        app:layout_constraintEnd_toEndOf="@+id/container_info"
        app:layout_constraintStart_toEndOf="@id/container_image_profile"
        app:layout_constraintTop_toTopOf="@+id/container_image_profile" />


    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_info" />

    <androidx.cardview.widget.CardView
        android:id="@+id/container_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/email" />

    <TextView
        android:id="@+id/edit_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:paddingBottom="5dp"
        android:text="Введите email"
        android:textColor="@color/secondary_light_background"
        android:textSize="@dimen/secondary_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="@dimen/accent_top_margin"
        android:elevation="2dp"
        android:gravity="start"
        android:paddingTop="5dp"
        android:text="email"
        android:textColor="?attr/primary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_info" />

    <View
        android:id="@+id/line_container"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/line"
        app:layout_constraintBottom_toBottomOf="@+id/container_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/container_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_email" />

    <TextView
        android:id="@+id/edit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:paddingBottom="5dp"
        android:text="Введите имя"
        android:textColor="@color/secondary_light_background"
        android:textSize="@dimen/secondary_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />


    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="@dimen/primary_top_margin"
        android:elevation="2dp"
        android:gravity="start"
        android:paddingTop="5dp"
        android:text="Name"
        android:textColor="?attr/primary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_email" />

    <View
        android:id="@+id/line_container_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/line"
        app:layout_constraintBottom_toBottomOf="@+id/container_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/container_gender"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_name" />

    <TextView
        android:id="@+id/edit_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:paddingBottom="5dp"
        android:text="Введите gender"
        android:textColor="@color/secondary_light_background"
        android:textSize="@dimen/secondary_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender" />


    <TextView
        android:id="@+id/gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="@dimen/primary_top_margin"
        android:elevation="2dp"
        android:gravity="start"
        android:paddingTop="5dp"
        android:text="gender"
        android:textColor="?attr/primary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_name" />

    <View
        android:id="@+id/line_container_3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="2dp"
        android:background="?attr/line"
        app:layout_constraintBottom_toBottomOf="@+id/container_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/container_age"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_gender" />

    <TextView
        android:id="@+id/edit_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:paddingBottom="5dp"
        android:text="Введите age"
        android:textColor="@color/secondary_light_background"
        android:textSize="@dimen/secondary_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/age" />

    <TextView
        android:id="@+id/age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/primary_horizontal_margin"
        android:layout_marginTop="@dimen/primary_top_margin"
        android:elevation="2dp"
        android:gravity="start"
        android:paddingTop="5dp"
        android:text="age"
        android:textColor="?attr/primary_text"
        android:textSize="@dimen/primary_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_gender" />

    <View
        android:id="@+id/line_container_4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_age" />


</androidx.constraintlayout.widget.ConstraintLayout>