<resources>

    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.NoActionBar">
        <item name="primary">@color/primary_light</item>
        <item name="secondary">@color/secondary</item>
        <item name="accent">@color/accent</item>

        <item name="primary_background">@color/primary_light_background</item>
        <item name="secondary_background">@color/secondary_light_background</item>

        <item name="line">@color/light_line</item>

        <item name="image">@color/light_image</item>

        <item name="primary_text">@color/primary_light_text</item>
        <item name="secondary_text">@color/secondary_light_text</item>
        <item name="accent_text">@color/accent_text</item>

        <item name="background_note">@color/light_background_note</item>

    </style>

    <style name="Theme.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="primary">@color/primary_dark</item>
        <item name="secondary">@color/secondary</item>
        <item name="accent">@color/accent</item>

        <item name="primary_background">@color/primary_dark_background</item>
        <item name="secondary_background">@color/secondary_dark_background</item>

        <item name="line">@color/dark_line</item>

        <item name="image">@color/dark_image</item>

        <item name="primary_text">@color/primary_dark_text</item>
        <item name="secondary_text">@color/secondary_dark_text</item>
        <item name="accent_text">@color/accent_text</item>

        <item name="background_note">@color/dark_background_note</item>
    </style>

</resources>